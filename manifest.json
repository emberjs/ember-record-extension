{
  "manifest_version": 2,

  "name": "Ember Recorder",
  "description": "Tool for recording Ember stats.",
  "version": "0.2.1",
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Record Calls"
  },
  "web_accessible_resources": [
    "resources/record-ember-calls.js"
  ]
}
